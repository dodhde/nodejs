<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Collection</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: auto;
            min-height: 100%;
        }
        body {
            background-color: #fff8e4;

            display: flex;
            flex-direction: column;

            padding-top: 20px;
            padding-bottom: 200px;
        }
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        .backimg {
            background-image: url(https://i.ibb.co/3RC981V/FHD-background-imagex.png);
            background-repeat: repeat-x;
            background-position: bottom;
            height: 500px; /* Adjust the height as needed */
            width: 100%;
        }
    </style>
</head>
<body>
    <%-include('header.ejs')%>

    



    <h3 style="padding-left: 20px;">인기순</h3>
    
    <div class="container" style="flex: 1;">
        <div class="row" id="recipe-cards">
            <!-- 레시피 카드 -->
        </div>
    </div>
    <div class="backimg"></div>

    <%-include('footer.ejs')%>



    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const recipes = [
                {
                    "title": "Spaghetti Carbonara",
                    "image": "https://via.placeholder.com/300",
                    "description": "A classic Italian pasta dish made with eggs, cheese, pancetta, and pepper."
                },
                {
                    "title": "Chicken Curry",
                    "image": "https://via.placeholder.com/300",
                    "description": "A flavorful and spicy chicken curry made with a blend of aromatic spices."
                },
                {
                    "title": "Beef Tacos",
                    "image": "https://via.placeholder.com/300",
                    "description": "Delicious beef tacos served with fresh salsa, lettuce, and cheese."
                }
                // More recipes can be added here
            ];

            const recipeCardsContainer = document.getElementById('recipe-cards');

            recipes.forEach(recipe => {
                const card = document.createElement('div');
                card.className = 'col-md-4';
                card.innerHTML = `
                    <div class="card mb-4">
                        <img src="${recipe.image}" class="card-img-top" alt="${recipe.title}">
                        <div class="card-body">
                            <h5 class="card-title">${recipe.title}</h5>
                            <p class="card-text">${recipe.description}</p>
                        </div>
                    </div>
                `;
                recipeCardsContainer.appendChild(card);
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
